		Items: {
			BloodTalisman: {
				DisplayName: Blood Talisman
				Tooltip:
					'''
					Sacrifice your lifeforce to greatly strengthen minions
					'Try not to fall into madness'
					'''
			}

			MinionControlRod: {
				DisplayName: Minion Control Rod
				Tooltip:
					'''
					'Dominate and direct your minions'
					Left click to teleport all your minions to the cursor
					'''
				Rightclick1: Right click on an enemy to target it
				Rightclick2Remove: or right click on the reticle to remove it again
				Rightclick2Spawn: or right click somewhere else to spawn a reticle your minions will attack
				Rightclick3: Right click another players' reticle so he has control over your minions' target
			}

			MinionHistoryBook: {
				DisplayName: Minion History Book
				Tooltip:
					'''
					Left click to summon minions based on history
